extends ../layouts/common

block content
	h1 CREATE USER
		if errs
			each err in errs
				.alert.alert-danger(role='alert')= err

		form(action='/users/create', method="post", enctype="multipart/form-data",)
			.form-group
				label(for='name') Name
				input#name.form-control(type='text', placeholder='Your Name' name="name", value=values ? values.name : '')
			.form-group
				label(for='phone') Phone
				input#phone.form-control(type='text', placeholder='Phone' name="phone", value=values ? values.phone : '')
			.form-group
				label(for='avatar') Avartar
				input.form-control(type='file', name="avartar")
			button.btn.btn-primary(type='submit') Create
